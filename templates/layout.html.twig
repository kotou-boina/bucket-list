<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Bucket-List{% endblock %}</title>
    <link href="//fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css">
    <link rel="icon" href="{{ asset('img/favicon.png') }}">
    {% block css %}
        <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
        <link rel="stylesheet" href="{{ asset('css/skeleton.css') }}">
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    {% endblock %}
</head>
<body>
    <div class="container">
        <div class="navbar">
            <header>
                <a class="site-title" href="{{ path('home') }}" title="Bucket-List | Home">
                    <img src="{{ asset('img/logo.png') }}" alt="Bucket-List"> Bucket-List
                </a>
                <div class="d-flex justify-content-between align-items-center">
                    <nav>
                        <ul>
                            <li><a href="{{ path("home") }}" title="Bucket-List | Home">Home</a></li>
                            <li><a href="{{ path("idea_list") }}" title="Latest ideas">Latest ideas</a></li>
                            {% if app.user %}
                                <li><a href="{{ path("idea_new") }}" title="New idea">New idea</a></li>
                            {% endif %}
                            <li><a href="{{ path("about_us") }}" title="About us">About us</a></li>
                        </ul>
                    </nav>
                    {% if app.user %}
                        <a href="{{ path('app_logout') }}">Log out</a>
                    {% else %}
                        <nav>
                            <ul>
                                <li><a href="{{ path('app_login') }}">Log in</a></li>
                                <li><a href="{{ path('app_register') }}">Register</a></li>
                            </ul>
                        </nav>
                    {% endif %}
                    
                </div>
            </header>
        </div>

        <main>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            {% block main %}{% endblock %}
        </main>

        <footer>
            Â© {{ "now"|date("Y") }} Bucket-List
        </footer>
    </div>
</body>
</html>